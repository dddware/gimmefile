@import 'font.css'

@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700')
@import url('http://fonts.googleapis.com/css?family=Roboto+Condensed');


blue = #34A0CA
green = #40ED0E
sansSerif = "open sans", "Helvetica", sans-serif
serif = "Roboto Condensed", 'Georgia', "serif"
*
  box-sizing border-box

body 
  font-family sansSerif
  color #1e2229 
  margin 0
  background-color #fff
  background: url('../images/background.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center center
  font-size 16px  
  &:hover .upload-form:before
    top -0.7em

ul, li
  list-style-type none
  margin 0
  padding 0

a 
  color blue
  text-decoration none
  &:hover 
    color darken(blue, 20%)

.container
  margin 0
  border-top: 1px solid rgba(255,255,255,0.3)
  box-shadow inset 0 13em 8em rgba(255,255,255,0.2)
.row  
  max-width: 960px
  margin: 0 auto

h1, h2, h3
  color blue
  font-weight 400

body > header
  margin: 0 0 5px
  padding: 0.1em 0 0.2em
  background: rgba(255, 255, 255, 0.9)
  h1
    display: inline-block
    margin-left: 1em
  .create-bucket
    button(blue)
    vertical-align: top
    margin: 2.8em 2em 0 0
    float: right

    strong
      font-weight 500

.logo 
  display inline-block
  font-size 1.2em
  width 1.5em
  height 1.5em
  line-height 1.5em
  color blue
  text-shadow 0.2em -0.3em 0 gold, -0.2em -0.15em 0 orange
  border-radius 0.1em

.home-container
  min-height: 400px
  margin: 0 auto
  padding: 2em
  background: #fff
  text-align: left
  h1
    margin-top: 0

.primary-blocks
  text-align: center
  color: blue

  .third
    font-size: 1.2em
    clear: both
    &:first-child i
      color: orange
    &:nth-child(1) i
      //.flip
    &:last-child i
      color: green
  p
    height: 100%
    text-align: left
    color: #333
    font-size: 1.4em
    padding: 1.5em 0
    font-family: serif
  i
    color: blue
    font-size: 6em
    margin-right: 30px
    float: left

.content
  position relative
  overflow hidden
  max-width 24em
  padding 2em 3em
  margin 2em auto 3em
  background #f9f9f9
  border-radius 2px
  border-bottom-color #ccc
  box-shadow inset 0 1px 1px rgba(255,255,255,0.4), 0 1px 2em rgba(0,0,0,0.2)
  &:before
    content '⬍'
    position absolute
    display block
    width 100%
    color #ddd
    left 0
    top -1.1em
    font-size 8em
    transition top 0.3s

  h1
    margin-top 0.5em
    font-weight 300
    text-align center



// UPLOAD
label
  display block
  font-size 0.9em
  padding-left 0.2em
  color #777

label[for="upload-input"]
  cursor pointer
  position relative
  padding 0.6em 1.6em
  margin 2em auto 
  max-width 20em
  background #fff
  border-radius 3px
  border 1px dashed blue
  text-align center
  color blue
  transition all 0.1s
  &:hover
    background lighten(blue, 95%)
  input 
    cursor pointer
    opacity 0
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 1

button(color)
  cursor pointer
  padding 0.6em 1.6em
  display inline-block 
  margin 1em auto
  text-transform uppercase
  font-weight 700
  background color
  background linear-gradient(color, darken(color,10%))
  color #fff
  text-shadow 0 1px 1px darken(color, 10%)
  border-radius 3px
  border 1px solid darken(color, 10%)
  outline none
  &:hover, &:focus
    box-shadow inset 0 0 1px 1px lighten(color, 30%)
    text-shadow 0 1px 2px darken(color, 30%)
    border 1px solid darken(color, 25%)
  &:active 
    background darken(color, 5%)
    box-shadow inset 0 1px 1px darken(color, 20%)
  a 
    color #fff
    &:hover
      color: #fff


button
  button(blue)
  &.second
    button(gold)
  &.third
    button(orange)


.button-container 
  text-align center
  clear both
  margin-top: 1em

  &--right
    text-align right

  button 
    margin auto 0.4em

.more-guest
  cursor pointer
  float left
  font-size 0.8em
  margin-top -1.2em

input[type="text"],
input[type="email"]
  width 100%
  margin-bottom 1em
  padding 0.3em
  border 1px solid #ccc
  border-bottom-color #ddd
  border-radius 3px
  background #fff
  background linear-gradient(#F8F8F8, #FFF)
  outline none
  font-family sansSerif
  color blue
  font-size 1.1em
  transition all 0.1s
  &:focus
    border: 1px solid blue

input[type="email"] + input[type="email"]
  margin-top -0.5em

// BUCKET
.bucket_description 
  max-width 40em
  margin 0 auto 1em

body > footer
  font-size 0.8em
  color #666
  text-align center
  font-style italic
  filter: blur(10px)
  dt, dd
    display inline-block
    padding 0
    margin 0
    padding-left 0.5em

[class^="alert-"]
  position relative
  border-width 1px
  border-style solid
  margin-bottom 1.5em
  padding 10px
  font-size 0.8em

  .close
    cursor pointer
    position absolute
    top 5px
    right 5px
    width 1em
    text-align center
    color #666

.alert-error
  color #a94442
  background-color #f2dede
  border-color #ebccd1

.alert-warning
  color #8a6d3b
  background-color #fcf8e3
  border-color #faebcc

.alert-info
  color #31708f
  background-color #d9edf7
  border-color #bce8f1

.alert-success
  color #3c763d
  background-color #dff0d8
  border-color #d6e9c6
