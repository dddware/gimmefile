blue = #34A0CA

body 
  font-family open sans
  color #1e2229 
  margin 0
  background-color #fff
  font-size 16px

a 
	color blue

.container
  margin 0
  background #f2f2f2
  padding 2em 0

h1 
  text-align center
  color blue
  font-weight 100

.upload-form
  height 24em
  width 24em
  padding 3em
  margin 0 auto
  background #f9f9f9
  border-radius 5px
  border 1px solid #ddd
  border-bottom-color #ccc
  text-align center
  box-shadow inset 0 1px 1px rgba(255,255,255,0.4)

.upload-form__button
	padding 1em 2em
	display block	
	margin 1em auto
	text-transform uppercase
	font-weight 700
	background blue
	color: #fff
	border-radius 3px
	border 1px solid darken(blue, 5%)

input[type="text"]
  -webkit-appearence none
  border 1px solid #ccc
  border-bottom-color #bbb
  border-radius 3px
  outline none
  font-size 1.2em
  padding 0.3em