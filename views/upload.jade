extends layout

block content
  form.upload-form.content(method="post", action="/upload", enctype="multipart/form-data")
    section.upload-form__content
      h1.upload-form__title Upload a file to <br> "My bucket"
      label(for="upload-input")
        .filename Drag your files or click here to upload
        input#upload.upload-form__input(type="file", name="upload", multiple)
      label(for="email") Your email
      input#email(type="email", placeholder="victor.darras@gmail.com")
      .control.guests  
        label(for="guest") Send to 
        input#guest(type="email", placeholder="tom.panier@gmail.com")
        a.more-guest + more
      .button-container
        button.upload-form__button(type="submit") upload