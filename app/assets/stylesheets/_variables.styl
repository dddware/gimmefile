@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700')
@import url('http://fonts.googleapis.com/css?family=Roboto+Condensed');



flip()
  -webkit-transform: scaleX(-1);
  -moz-transform: scaleX(-1);
  -ms-transform: scaleX(-1);
  -o-transform: scaleX(-1);
  transform: scaleX(-1);
  filter: FlipH;



button(color)
  cursor pointer
  padding 0.6em 1em
  display inline-block 
  margin 1em auto
  text-transform uppercase
  font-weight 700
  background color
  background linear-gradient(color, darken(color,10%))
  color #fff
  text-shadow 0 1px 1px darken(color, 10%)
  border-radius 3px
  border 1px solid darken(color, 10%)
  outline none
  &:hover, &:focus
    box-shadow inset 0 0 1px 1px lighten(color, 30%)
    text-shadow 0 1px 2px darken(color, 30%)
    border 1px solid darken(color, 25%)
  &:active 
    background darken(color, 5%)
    box-shadow inset 0 1px 1px darken(color, 20%)
  a 
    color #fff
    &:hover
      color: #fff


blue = #34A0CA
green = #40ED0E
sansSerif = "open sans", "Helvetica", sans-serif
serif = "Roboto Condensed", 'Georgia', "serif"